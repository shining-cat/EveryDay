    <!-- BUG with inactive settings in preferences if textColorPrimary is defined then it overrides "inactive" color for pref title, same for textColorSecondary and summary
                   => added override of onBindView in concerned prefs to apply alpha effect according to enabled state-->

    <!-- TODO: voir si refaire les smiley_not_set.png pb, ils ne sont pas utilisÃ©s sur le meme fond que ceux du SmileRating-->

    <style name="Theme.App.wood" >
        <item name="android:colorBackground">@color/wood_primaryLightColor</item>

        <item name="colorPrimaryUltraLight">@color/wood_primaryUltraLightColor</item>
        <item name="colorPrimaryLight">@color/wood_primaryLightColor</item>
        <item name="colorPrimary">@color/wood_primaryColor</item>
        <item name="colorPrimaryDark">@color/wood_primaryDarkColor</item>

        <item name="colorAccentLight">@color/wood_secondaryLightColor</item>
        <item name="colorAccent">@color/wood_secondaryColor</item>
        <item name="colorAccentDark">@color/wood_secondaryDarkColor</item>

        <item name="android:textColorPrimary">@color/wood_primaryTextColor</item>
        <item name="android:textColorSecondary">@color/wood_secondaryTextColor</item>
        <!--<item name="android:textColorPrimaryInverse">@color/wood_primaryDarkColor</item>-->
        <!--<item name="android:textColorPrimaryInverse">@color/wood_secondaryLightColor</item>-->
        <!--<item name="android:textColorSecondaryInverse">@color/wood_secondaryTextColor</item>-->

        <item name="android:colorButtonNormal">@color/wood_secondaryColor</item>
        <item name="android:colorControlActivated">@color/wood_secondaryColor</item>
        <item name="android:colorControlNormal">@color/wood_primaryDarkColor</item>
        <item name="android:colorControlHighlight">@color/wood_secondaryDarkColor</item>

        <!--this is for alertDialogs-->
        <item name="alertDialogTheme">@style/wood_alertDialog</item>
        <!--this is for preferencedialogs-->
        <item name="android:alertDialogTheme">@style/wood_alertDialog</item>
    </style>

    <style name="wood_alertDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/wood_secondaryColor</item>
        <item name="android:textColorPrimary">@color/wood_primaryTextColor</item>
        <!--strange : colorControlNormal does not apply to numberpicker divider color inside preference dialog on Lollipop-->
        <item name="android:colorControlNormal">@color/wood_primaryDarkColor</item>
        <item name="colorPrimaryLight">@color/wood_primaryLightColor</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>
    </style>


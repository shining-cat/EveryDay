<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <!--android:background="@android:color/transparent"-->


<!-- not used anymore : ripple effect on whole button : android:background="@drawable/white_ripple" -->

    <TextView
        android:id="@+id/sessions_list_filter_toggle_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?android:attr/textColorPrimary"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/date" />

    <ImageView
        android:id="@+id/sessions_list_filter_toggle_option_A_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/arrow_up"
        android:src="@drawable/ic_arrow_up_white_24dp"
        android:tint="?android:attr/textColorPrimary"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@id/sessions_list_filter_toggle_h_guideline"
        app:layout_constraintStart_toEndOf="@id/sessions_list_filter_toggle_label" />

    <ImageView
        android:id="@+id/sessions_list_filter_toggle_option_A_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/arrow_up"
        android:src="@drawable/ic_check_white_24dp"
        android:tint="?android:attr/textColorPrimary"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@id/sessions_list_filter_toggle_h_guideline"
        app:layout_constraintStart_toEndOf="@id/sessions_list_filter_toggle_label" />

    <ImageView
        android:id="@+id/sessions_list_filter_toggle_option_B_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/arrow_down"
        android:src="@drawable/ic_arrow_down_white_24dp"
        android:tint="?android:attr/textColorPrimary"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/sessions_list_filter_toggle_label"
        app:layout_constraintTop_toBottomOf="@id/sessions_list_filter_toggle_h_guideline" />

    <ImageView
        android:id="@+id/sessions_list_filter_toggle_option_B_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/arrow_up"
        android:src="@drawable/ic_close_white_24dp"
        android:tint="?android:attr/textColorPrimary"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/sessions_list_filter_toggle_label"
        app:layout_constraintTop_toBottomOf="@id/sessions_list_filter_toggle_h_guideline"/>

    <android.support.constraint.Guideline
        android:id="@+id/sessions_list_filter_toggle_h_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />
</android.support.constraint.ConstraintLayout>
    <EditText
        android:id="@+id/searchbar_widget_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="?android:attr/textColorPrimary"
        android:textColor="?android:attr/textColorPrimary"
        android:textColorHint="?android:attr/textColorSecondary"
        android:hint="@string/search"
        android:imeOptions="actionDone"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/searchbar_widget_clear_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:clickable="true"
        android:contentDescription="@string/cross"
        android:focusable="true"
        android:src="@drawable/ic_clear_white_36dp"
        android:tint="?android:attr/textColorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/searchbar_widget_edittext"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/searchbar_widget_search_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/magnifier"
        android:src="@drawable/ic_search_white_36dp"
        android:tint="?android:attr/textColorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/searchbar_widget_clear_btn"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>